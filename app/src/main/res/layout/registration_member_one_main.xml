<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bismeet.technoquiz.MainActivity">

    <EditText
        android:id="@+id/member_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextbg"
        android:drawableLeft="@drawable/avatar"
        android:drawablePadding="20dp"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="14dp"
        android:gravity="center"
        android:paddingTop="12dp"
        android:layout_marginTop="10dp"
        android:hint="@string/member_name"
        android:inputType="text"
        android:drawableStart="@drawable/avatar"
        android:paddingStart="8dp"
        android:paddingEnd="14dp" />

    <EditText
        android:id="@+id/Email_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittextbg"
        android:drawableLeft="@drawable/mail"
        android:drawablePadding="20dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:gravity="center"
        android:paddingRight="14dp"
        android:paddingTop="12dp"
        android:drawableStart="@drawable/mail"
        android:paddingStart="8dp"
        android:paddingEnd="14dp" />

    <EditText
        android:id="@+id/phone_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittextbg"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="20dp"
        android:hint="@string/phone"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:inputType="phone"
        android:drawableStart="@drawable/phone"
        android:paddingStart="8dp"
        android:paddingEnd="12dp" />

    <Button
        android:id="@+id/member_two_button"
        style="?android:buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/next"
        android:textSize="25sp" />

</LinearLayout>
