<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context="com.example.bismeet.technoquiz.MainActivity">

    <EditText
        android:inputType="text"
        android:layout_marginTop="15dp"
        android:id="@+id/team_name"
        android:hint="@string/team_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:layout_below="@id/team_name"
        android:id="@+id/college_name"
        android:hint="@string/college_name"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_below="@id/college_name"
        android:id="@+id/house_spinner"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:entries="@array/house"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"></Spinner>
    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/house_spinner"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        style="?android:buttonBarButtonStyle"
        android:text="@string/next"
        android:textSize="20sp"
        android:id="@+id/next_button_to_member"
        android:layout_height="wrap_content" />

</RelativeLayout>
